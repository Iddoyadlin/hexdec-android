<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E1A53"
    android:backgroundTint="#000000"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="397dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:fontFamily="casual"
        android:text="Round Over"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="397dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:fontFamily="casual"
        android:text="500"
        android:textAlignment="center"
        android:textColor="#00BCD4"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/best_score_value"
        android:layout_width="84dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:fontFamily="casual"
        android:text="500"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="397dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:fontFamily="casual"
        android:text="Your Score Is:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="33dp"
        android:layout_marginTop="28dp"
        android:fontFamily="casual"
        android:text="Best Score:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Button
        android:id="@+id/button"
        android:layout_width="146dp"
        android:layout_height="64dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="112dp"
        android:backgroundTint="#EED5B2"
        android:fontFamily="casual"
        android:onClick="clickPlayAgain"
        android:text="Play Again"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_score_value" />

    <Button
        android:id="@+id/button2"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#EED5B2"
        android:fontFamily="casual"
        android:onClick="clickMainMenu"
        android:text="Main Menu"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/best_score_value" />
</androidx.constraintlayout.widget.ConstraintLayout>